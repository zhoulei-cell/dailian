
.elis{
		display: -webkit-box;
		overflow: hidden;
		-o-text-overflow: ellipsis;
		   text-overflow: ellipsis;
		word-wrap: break-word;
		white-space: normal !important;
		-webkit-line-clamp: 1;
		-webkit-box-orient: vertical;
}
.content{
		background: #fff;
}
.item{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;	
	-webkit-box-shadow: 1px 1px 1px 1px #E0E0E0;	
	        box-shadow: 1px 1px 1px 1px #E0E0E0;
	border-radius: 10rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	overflow: hidden;
	margin-bottom: 20rpx;
}
.item .money{
		width: 150rpx;
		display: -webkit-box;
		display: -webkit-flex;
		display: -ms-flexbox;
		display: flex;
		-webkit-box-pack: center;
		-webkit-justify-content: center;
		    -ms-flex-pack: center;
		        justify-content: center;
		-webkit-box-align: center;
		-webkit-align-items: center;
		    -ms-flex-align: center;
		        align-items: center;
		background-color: red; /* 浏览器不支持的时候显示 */
		background-image: -webkit-gradient(linear, left top, right top, from(#0faeff), to(#b1e3fc));
		background-image: -o-linear-gradient(left, #0faeff, #b1e3fc);
		background-image: linear-gradient(90deg, #0faeff, #b1e3fc); 
		color: #fff;
		border-right: 1px dashed #fff;
}
.item .money text{
		font-size: 80rpx;
}
.item .item_left{
		-webkit-box-flex: 1;
		-webkit-flex: 1;
		    -ms-flex: 1;
		        flex: 1;
		padding: 20rpx;
		-webkit-box-sizing: border-box;
		        box-sizing: border-box;
}
.item .item_left .title{
		font-size: 28rpx;
		font-weight: bold;
}
.item .item_left .dec{
		font-size: 24rpx;
		color: #999999;
		line-height: 36rpx;
}
.item .item_right{
		color: red;
		font-size: 36rpx;
		font-weight: bold;
		padding-left: 10rpx;
		display: -webkit-box;
		display: -webkit-flex;
		display: -ms-flexbox;
		display: flex;
		-webkit-box-pack: center;
		-webkit-justify-content: center;
		    -ms-flex-pack: center;
		        justify-content: center;
		-webkit-box-align: center;
		-webkit-align-items: center;
		    -ms-flex-align: center;
		        align-items: center;
		padding-right: 10rpx;
}
.item .item_right button{
		line-height: 60rpx;
		border-radius: 100rpx;
}

